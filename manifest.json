{
  "manifest_version": 3,
  "name": "Prompt Saver",
  "version": "1.0.0",
  "description": "Save and reuse prompts across different AI platforms using # commands",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/dropdown.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Prompt Saver",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
